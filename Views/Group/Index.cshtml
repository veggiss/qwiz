<h2 class="text-center">Groups</h2>

<br>
<hr>
    
<div id="tabContent" class="tab-content">
    <div class="tab-pane fade active show">
        <div class="w-100">
            <div>
                <div class="form-row">
                    <div class="col form-group">
                        <label>Order by:</label>
                        <select class="form-control onChangeCallback" id="orderBySelect">
                            <option value="members">Members</option>
                            <option value="created">Created</option>
                        </select>
                    </div>
                    
                    <div class="col form-group">
                        <label>&nbsp;</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="material-icons">search</i></div>
                            </div>
                            <input id="searchInput" class="form-control" type="search" placeholder="Search" aria-label="Search">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-center">
            <div class="w-100">
                <groupcard 
                    v-for="(group, index) in groups.entries"
                    v-bind:group="group"
                    v-bind:key="index">
                </groupcard>
                
                <paginate v-model="groups.currentPage"
                    v-if="groups.pages > 1"
                    class="w-100 d-flex justify-content-center"
                    :page-count="groups.pages"
                    :page-range="5"
                    :margin-pages="0"
                    :click-handler="getGroupsList"
                    :prev-text="'Prev'"
                    :next-text="'Next'"
                    :container-class="'pagination'"
                    :page-class="'page-item'"
                    :page-link-class="'page-link'"
                    :next-link-class="'page-link'"
                    :prev-link-class="'page-link'"
                    :no-li-surround="false"
                    :first-last-button="true">
                </paginate>
            </div>
        </div>
    </div>
</div>
<br>
@section Scripts
{
    <script src="~/js/group/vueGroupcard.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/js/group/index.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/js/group/index.min.js" asp-append-version="true"></script>
    </environment>
}

