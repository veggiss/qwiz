
@model List<Quiz>

<div class="text-center">
    <h1 class="display-4">Qwizes</h1>
</div>
<hr>

<br>

<h2>Popular Quizes</h2>
<br>
<div class="container">
<div id="carouselExampleIndicators" class="carousel slide text-center" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="d-flex m-2">
                <div class="card flex-fill box-shadow">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">Topic</h4>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <small class="text-muted">Category:</small>
                        <p>Category</p>
                        <small class="text-muted">Description:</small>
                        <p>Description</p>
                        <a class="btn btn-lg btn-block btn-outline-primary mt-auto">Take quiz</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="d-flex m-2">
                <div class="card flex-fill box-shadow">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">Topic</h4>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <small class="text-muted">Category:</small>
                        <p>Category</p>
                        <small class="text-muted">Description:</small>
                        <p>Description</p>
                        <a class="btn btn-lg btn-block btn-outline-primary mt-auto">Take quiz</a>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="d-flex m-2">
                    <div class="card flex-fill box-shadow">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">Topic</h4>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <small class="text-muted">Category:</small>
                            <p>Category</p>
                            <small class="text-muted">Description:</small>
                            <p>Description</p>
                            <a class="btn btn-lg btn-block btn-outline-primary mt-auto">Take quiz</a>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
</div>

