@model List<Quiz>

<div class="text-center">
    <h1 class="display-4">Qwizes</h1>
</div>
<hr>
<div class="container">
    <div class="row justify-content-center text-center">
        @foreach (var item in Model)
        {
            <div class="d-flex m-2">
                <div class="card flex-fill box-shadow" style="min-width: 15em; max-width: 15em; height: 18em;">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">@item.Topic</h4>
                    </div>
    
                    <div class="card-body d-flex flex-column">
                        <small class="text-muted">Category:</small>
                        <p>@item.Category</p>
                        <small class="text-muted">Description:</small>
                        <p>@item.Description</p>
                        <a asp-action="Play" asp-route-id="@item.Id" class="btn btn-lg btn-block btn-outline-primary mt-auto">Take quiz</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
